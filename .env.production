# 生产环境配置

# ============================================================================
# Rust 日志配置
# ============================================================================
RUST_LOG=course_scheduling_system=info

# ============================================================================
# 服务层配置
# ============================================================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE_PREFIX=service
LOG_RETENTION_DAYS=30
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_SANITIZE_SENSITIVE_DATA=true

# ============================================================================
# 前端配置
# ============================================================================
VITE_LOG_LEVEL=INFO
VITE_LOG_ENABLE_CONSOLE=true
VITE_LOG_ENABLE_STORAGE=true
VITE_LOG_MAX_STORAGE_SIZE=1000
VITE_LOG_SANITIZE_SENSITIVE_DATA=true

# ============================================================================
# 数据库配置
# ============================================================================
DATABASE_URL=sqlite:./data/course-scheduling.db

# ============================================================================
# 其他配置
# ============================================================================
VITE_ENABLE_DEV_TOOLS=false
VITE_API_BASE_URL=http://localhost:3000
