{
  "name": "course-scheduling-system",
  "version": "0.1.0",
  "description": "基于约束优化问题的智能课程调度系统",
  "type": "module",
  "scripts": {
    "dev": "bun run killports && concurrently -n \"SERVICE,TAURI\" -c \"blue,yellow\" \"bun run service:dev\" \"tauri dev\"",
    "dev:all": "bun run killports && concurrently -n \"SERVICE,VITE\" -c \"blue,green\" \"bun run service:dev\" \"vite\"",
    "dev:frontend": "vite",
    "dev:service": "bun run service:dev",
    "dev:tauri": "tauri dev",
    "killports": "bun run scripts/kill-ports.ts",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:integration": "bunx playwright test",
    "test:integration:template": "bunx playwright test tests/integration/template-download.spec.ts --config=playwright.api.config.ts",
    "test:integration:import": "bash tests/run-import-tests.sh",
    "mygit": "bun run scripts/mygit-simple.ts",
    "mygit:full": "bun run scripts/mygit/index.ts",
    "mygit:test": "bun run scripts/mygit/test-mygit.ts",
    "test:integration:ui": "bunx playwright test --ui",
    "test:integration:debug": "bunx playwright test --debug",
    "test:integration:headed": "bunx playwright test --headed",
    "test:integration:report": "bunx playwright show-report tests/reports/html",
    "test:integration:codegen": "bunx playwright codegen http://localhost:1420",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "service:dev": "bun run --watch src-service/index.ts",
    "generate:testdata": "bun run scripts/generate-test-data.ts",
    "upgrade:tauri": "bash scripts/upgrade-tauri-v2.sh",
    "verify:tauri": "bun run scripts/verify-tauri-v2.ts",
    "service:build": "bun build src-service/index.ts --outdir dist-service --target bun",
    "service:start": "bun run dist-service/index.js",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "format": "bun run format:frontend && bun run format:service && bun run format:rust",
    "format:frontend": "prettier --write \"src/**/*.{ts,tsx,vue,js,jsx,json,css,scss,html}\"",
    "format:service": "prettier --write \"src-service/**/*.{ts,js,json}\"",
    "format:rust": "cd src-tauri && cargo fmt",
    "format:check": "bun run format:check:frontend && bun run format:check:service && bun run format:check:rust",
    "format:check:frontend": "prettier --check \"src/**/*.{ts,tsx,vue,js,jsx,json,css,scss,html}\"",
    "format:check:service": "prettier --check \"src-service/**/*.{ts,js,json}\"",
    "format:check:rust": "cd src-tauri && cargo fmt -- --check",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@hono/zod-validator": "^0.2.1",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-notification": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@vueuse/core": "^14.2.1",
    "axios": "^1.6.2",
    "dayjs": "^1.11.10",
    "echarts": "^6.0.0",
    "element-plus": "^2.5.0",
    "exceljs": "^4.4.0",
    "hono": "^3.11.7",
    "lodash-es": "^4.17.21",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "vue": "^3.4.0",
    "vue-draggable-plus": "^0.5.3",
    "vue-router": "^4.2.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tauri-apps/cli": "^2.0.0",
    "@types/bun": "^1.3.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^1.0.0",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.19.2",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "typescript": "^5.3.0",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.0",
    "vite-plugin-vue-devtools": "^8.0.6",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,scss,html}": [
      "prettier --write"
    ],
    "src-tauri/**/*.rs": [
      "sh -c 'cd src-tauri && cargo fmt'"
    ]
  }
}
