# EditorConfig 配置文件
# 统一不同编辑器的代码风格
# https://editorconfig.org

root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 文件保留尾随空格（用于换行）
[*.md]
trim_trailing_whitespace = false

# Makefile 使用 tab 缩进
[Makefile]
indent_style = tab

# Rust 文件使用 4 空格缩进
[*.rs]
indent_size = 4

# Python 文件使用 4 空格缩进
[*.py]
indent_size = 4

# YAML 文件使用 2 空格缩进
[*.{yml,yaml}]
indent_size = 2

# JSON 文件使用 2 空格缩进
[*.json]
indent_size = 2

# 配置文件
[*.{toml,ini}]
indent_size = 2
