# 排课系统环境变量配置示例
# 复制此文件为 .env.development、.env.production 或 .env.test 并根据需要修改

# ============================================================================
# 应用配置
# ============================================================================
APP_NAME=排课系统
APP_VERSION=0.1.0
NODE_ENV=development

# ============================================================================
# 服务器配置
# ============================================================================
SERVER_PORT=3000
SERVER_HOST=localhost
CORS_ENABLED=true
CORS_ORIGIN=*

# ============================================================================
# 数据库配置
# ============================================================================
DATABASE_TYPE=sqlite
DATABASE_PATH=data/schedule.db
DATABASE_JOURNAL_MODE=WAL
DATABASE_FOREIGN_KEYS=true
DATABASE_MIGRATIONS_PATH=src-service/db/migrations
DATABASE_AUTO_RUN_MIGRATIONS=true

# ============================================================================
# 日志配置
# ============================================================================
LOG_LEVEL=info
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORIZE=true
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=10
LOG_FILE_DATE_PATTERN=YYYY-MM-DD

# ============================================================================
# 文件上传配置
# ============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=.xlsx,.xls
UPLOAD_TEMP_DIR=/tmp/course-scheduling-uploads

# ============================================================================
# 文件导出配置
# ============================================================================
EXPORT_OUTPUT_DIR=exports
EXPORT_DEFAULT_FORMAT=xlsx

# ============================================================================
# LLM 配置（AI 功能）
# ============================================================================
LLM_ENABLED=false
LLM_PROVIDER=openai

# OpenAI 配置
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic 配置
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4096

# Azure OpenAI 配置
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# 本地 LLM 配置（如 Ollama）
LOCAL_LLM_ENDPOINT=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# ============================================================================
# 排课算法配置
# ============================================================================
SCHEDULING_ALGORITHM=genetic
SCHEDULING_MAX_ITERATIONS=10000
SCHEDULING_POPULATION_SIZE=100
SCHEDULING_MUTATION_RATE=0.1
SCHEDULING_CROSSOVER_RATE=0.8
SCHEDULING_TIMEOUT=300000

# ============================================================================
# 课表配置
# ============================================================================
TIMETABLE_CYCLE_DAYS=5
TIMETABLE_PERIODS_PER_DAY=8
TIMETABLE_WORK_DAYS=1,2,3,4,5

# ============================================================================
# 缓存配置
# ============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# ============================================================================
# 安全配置
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ============================================================================
# 前端配置
# ============================================================================
VITE_PORT=5173
VITE_HOST=localhost
TAURI_PORT=1420

# 前端日志配置
VITE_LOG_LEVEL=INFO
VITE_LOG_ENABLE_CONSOLE=true
VITE_LOG_ENABLE_STORAGE=true
VITE_LOG_MAX_STORAGE_SIZE=1000
VITE_LOG_SANITIZE_SENSITIVE_DATA=true

# 前端 API 配置
VITE_API_BASE_URL=http://localhost:3000
VITE_ENABLE_DEV_TOOLS=true

# ============================================================================
# Rust 日志配置（Tauri 后端）
# ============================================================================
RUST_LOG=course_scheduling_system=info
