# 测试环境配置

# ============================================================================
# Rust 日志配置
# ============================================================================
RUST_LOG=course_scheduling_system=debug

# ============================================================================
# 服务层配置
# ============================================================================
NODE_ENV=test
PORT=3001
LOG_LEVEL=DEBUG
LOG_DIR=logs
LOG_FILE_PREFIX=service-test
LOG_RETENTION_DAYS=0
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_SANITIZE_SENSITIVE_DATA=true

# ============================================================================
# 前端配置
# ============================================================================
VITE_LOG_LEVEL=DEBUG
VITE_LOG_ENABLE_CONSOLE=true
VITE_LOG_ENABLE_STORAGE=false
VITE_LOG_MAX_STORAGE_SIZE=1000
VITE_LOG_SANITIZE_SENSITIVE_DATA=true

# ============================================================================
# 数据库配置
# ============================================================================
DATABASE_URL=sqlite::memory:

# ============================================================================
# 其他配置
# ============================================================================
VITE_ENABLE_DEV_TOOLS=true
VITE_API_BASE_URL=http://localhost:3001
